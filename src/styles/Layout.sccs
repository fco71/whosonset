.layout {
    display: flex;
    flex-direction: column;
    min-height: 100vh; /* Ensure full height */
    background-color: #ffffff; /* Consistent white background */
}

.content {
    flex: 1; /* Take up remaining space */
    padding: 0; /* Remove default padding, let components handle their own spacing */
    max-width: none; /* Remove max-width constraint, let design system handle containers */
    margin: 0; /* Remove default margin */
}