rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // This is the new block you need to add
    match /jobTitles/{jobId} {
      // Allow any authenticated user to read the list of job titles.
      allow read: if request.auth != null; 
      
      // Prevent anyone from accidentally deleting or changing them from the website.
      allow write: if false;
    }

    // Your existing rule for crewProfiles remains the same
    match /crewProfiles/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }
  }
}